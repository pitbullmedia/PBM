		/>
		</Animation>
		<Animation
			id = "AnimEight"
			repeat = "false"
			easeFunction = "linear"
			duration = "2"
		>
		<Vector2DFieldInterpolator
			id = "OneInterp"
			key = "[0.0,1.0]"
			keyValue = "[[150,935],[10,899.3]]"
